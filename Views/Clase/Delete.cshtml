@model AplicacionWebEscolar.Models.Clase

@{
    ViewBag.Title = "Eliminar Clase";
}

<h2>Eliminar Clase</h2>

<h3>Está seguro que desea eliminarla?</h3>
<div>
    <h4>Clase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            NOMBRE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            MAESTRO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Maestro.Nombre) @Html.DisplayFor(model => model.Maestro.Apellidos)
        </dd>
        
        <dt>
            MATERIA
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Materia.Nombre)
        </dd>

        <dt>
            HORARIO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Horario.Nombre)
        </dd>
        <dt>
            MÁXIMO ALUMNOS
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaxAlumnos)
        </dd>

        <dt>
            ESTATUS
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estatus)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver al listado", "Index")
        </div>
    }
</div>
